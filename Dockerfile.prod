# -- Etapa 1: Build da aplica√ß√£o com pnpm --
FROM node:18-alpine AS builder

# Define o diret√≥rio de trabalho
WORKDIR /app

# Instala o pnpm
RUN npm install -g pnpm

# Copia os arquivos de configura√ß√£o de depend√™ncias para aproveitar o cache do Docker
COPY package.json pnpm-lock.yaml ./
RUN pnpm install --frozen-lockfile

# Copia o restante do c√≥digo-fonte
COPY . .

# Roda o comando de build do projeto
RUN pnpm build

# -- Etapa 2: Servir a aplica√ß√£o com Nginx --
FROM nginx:alpine

# Copia a pasta de build da etapa anterior para o diret√≥rio do Nginx
COPY --from=builder /app/dist /usr/share/nginx/html

# üîπ Copia configura√ß√£o customizada do Nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Exp√µe a porta que o Nginx usar√°
EXPOSE 80

# Comando para iniciar o Nginx
CMD [ "nginx", "-g", "daemon off;" ]